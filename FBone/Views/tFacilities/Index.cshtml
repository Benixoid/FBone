@model IEnumerable<FBone.Database.Entities.tFacility>

@{
    ViewData["Title"] = "List of facilities";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-default">Back</a>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table" role="banner" aria-describedby="facilities">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Force_maxId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Alarm_maxId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TranslatorEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Force_maxId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Alarm_maxId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranslatorEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
